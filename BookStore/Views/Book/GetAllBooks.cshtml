@model IEnumerable<BookStore.Models.BookModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   <style>
       table,
           td,
           th {
           text - align: center;
           background - color: #e5e5e5;
           border - radius: 5px;
           border: 2px solid #1c87c9;
           padding: 10px;
       }
   </style>
</head>
<body>
    <h1>Get All The Books</h1>
    <table>
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Book Name
                </th>
                <th>
                    Author Name
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {

            <tbody>
                <tr>
                    <td>
                        @item.id
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Author
                    </td>
                </tr>
            </tbody>

        }
    </table>

</body>
</html>
